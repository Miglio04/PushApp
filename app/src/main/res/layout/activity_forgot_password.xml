<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F0F4F8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_scrim"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_desc"
        android:textSize="14sp"
        android:textColor="#757575"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/etEmailReset"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_outline"
        android:hint="@string/email_hint"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/md_theme_scrim"
        android:textColorHint="#757575"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvEmailErrorReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_required"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnSendReset"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="@string/send_reset_link"
        android:textColor="#F0F4F8"
        android:backgroundTint="@color/md_theme_primary"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvBackToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_login"
        android:textColor="@color/md_theme_primary"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:padding="8dp"/>

</LinearLayout>