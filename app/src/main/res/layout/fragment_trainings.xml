<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.fragments.TrainingsFragment"
    android:background="@color/md_theme_background">


    <TextView
        android:background="@drawable/rectangle_round_corners"
        android:backgroundTint="@color/md_theme_secondaryContainer"
        android:textSize="18sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:id="@+id/your_training_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_trainings"
        android:textColor="@color/md_theme_onSecondaryContainer"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/training_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"

        app:layout_constraintTop_toBottomOf="@+id/your_training_text"

    />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="@color/md_theme_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <!-- Sample Data Button, debugging -->
    <Button
        android:id="@+id/btn_add_sample_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Sample Data"
        app:layout_constraintBottom_toTopOf="@+id/fab_add_training"
        app:layout_constraintEnd_toEndOf="@+id/fab_add_training"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_training"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="@color/md_theme_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>