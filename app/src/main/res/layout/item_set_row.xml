<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:padding="8dp"
    android:background="@drawable/rectangle_round_corners"
    android:backgroundTint="#F5F5F5"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/set_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set 1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/md_theme_primary"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:background="#D0D0D0"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/set_details"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="50kg x 10 reps"
        android:textColor="@color/md_theme_onSurface"/>

    <!-- Bottone Modifica -->
    <ImageButton
        android:id="@+id/btn_edit_set"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/edit" 
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:contentDescription="Modifica set"
        android:layout_marginEnd="8dp"/>

    <!-- Bottone Elimina (uso un'icona di sistema standard se delete non esiste, ma provo delete prima) -->
    <ImageButton
        android:id="@+id/btn_delete_set"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:contentDescription="Elimina set"
        app:tint="#D32F2F"
        xmlns:app="http://schemas.android.com/apk/res-auto"/>

</LinearLayout>